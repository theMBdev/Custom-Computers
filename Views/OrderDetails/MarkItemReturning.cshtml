@model CustomComputersGU.Models.Poco.OrderDetail

@*@{
    ViewBag.Title = "Mark Item Returning";
}

<h2>MarkItemReturning</h2>*@

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="center-on-page">

        <div>
            <h4>Return Item</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.OrderDetailId)
            @Html.HiddenFor(model => model.OrderId)
            @Html.HiddenFor(model => model.ProductId)
            @Html.HiddenFor(model => model.Quantity)
            @Html.HiddenFor(model => model.UnitPrice)

            <div class="form-group">
                @Html.LabelFor(model => model.Returning, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Returning)
                        @Html.ValidationMessageFor(model => model.Returning, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ReasonForReturning, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ReasonForReturning, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ReasonForReturning, "", new { @class = "text-danger" })
                </div>
            </div>

            @*Sets max number to the quantity ordered so user cant return more than they ordered *@
            <div class="form-group">
                @Html.LabelFor(model => model.AmountReturning, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AmountReturning, additionalViewData: new { htmlAttributes = new { min = 0, max = Model.Quantity } })
                    @Html.ValidationMessageFor(model => model.AmountReturning, "", new { @class = "text-danger" })
                </div>
            </div>

            @*ReturnForm*@
            <div>
                <a href="@Url.Action("DownloadPdfReturnForm", "Home")">Download Return Form</a>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />

                    @if (User.IsInRole("Customer"))
                    {
                        @Html.ActionLink("Back to List", "MyOrders", null, new { @class = "btn btn-outline-primary" })
                    }
                    else
                    {
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-primary" })
                    }

                </div>
            </div>
        </div>
        </div>
        }




