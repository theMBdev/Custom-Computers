    <script type="text/javascript">

    $(function () {
        // Document.ready -> link up remove event handler
        $(".RemoveLink").click(function () {
            // Get the id from the link            
            var recordToDelete = $(this).attr("data-id");
            if (recordToDelete != '') {
                clearUpdateMessage();
                // Perform the ajax post
                $.post("/ShoppingCart/RemoveFromCart", { "id": recordToDelete },
                    function (data) {
                        // Successful requests get here
                        // Update the page elements
                        $('#row-' + data.DeleteId).fadeOut('slow');
                        $('#cart-total').text(data.CartTotal);
                        $('#update-message').text(htmlDecode(data.Message));
                        $('#cart-status').text('Cart (' + data.CartCount + ')');
                        // Added to refresh on every action so checkout button will dissapear when needed
                        location.reload();
                    });
            }
        });

        $(".RefreshQuantity").click(function () {
            // Get the id from the link
            var recordToUpdate = $(this).attr("data-id");
            //Set quantity number to 0 if input value is empty
            var countToUpdate = 0;
            if ($("#" + $(this).attr("txt-id")).val().trim() !== '') {
                countToUpdate = $("#" + $(this).attr("txt-id")).val();
            }
            if (recordToUpdate != '') {
                clearUpdateMessage();
                // Perform the ajax post
                $.post("/ShoppingCart/UpdateCartCount", { "id": recordToUpdate, "cartCount": countToUpdate },
                function (data) {
                    // Successful requests get here
                    // Update the page elements
                    if (data.ItemCount == 0)
                    {
                        $('#row-' + data.DeleteId).fadeOut('slow');
                    }
                    $('#update-message').text(htmlDecode(data.Message));
                    /* Added to refresh on every action so checkout button will dissapear when needed and product
                       number will decrease to amount available if a number higher than is available is entered */
                    location.reload();
                    
                    //Check for not process the callback data when server error occurs
                    if (data.ItemCount != -1)
                    {
                        $('#cart-total').text(data.CartTotal);
                        $('#cart-status').text('Cart (' + data.CartCount + ')');
                    }
                });
            }
        });
    });

       function clearUpdateMessage() {
        // Reset update-message area
        $('#update-message').text('');
       }
       function htmlDecode(value) {
           if (value) {
               return $('<div />').html(value).text();
           }
           else {
               return '';
           }
       }
       if (typeof String.prototype.trim !== 'function') {
           String.prototype.trim = function () {
               return this.replace(/^\s+|\s+$/g, '');
           }
       }
    </script>

    @*@Html.ValidationSummary(true)*@
    @using (Html.BeginForm())
    {

        <div class="center-on-page-no-flex">

            <h3>
                <em>Review</em> your cart:
            </h3>

            @if (Model.CartTotal == 0)
            {
            <a></a>
            }
            else
            {
            <p>
                @Html.ActionLink("Checkout >>", "AddressAndPayment", "Checkout", new { area = "" }, new { @class = "btn btn-outline-primary" })
            </p>
            }


            <div>
                @for (int i = 0; i < Model.CartItems.Count; i++)
                { <p>
                @Html.ValidationMessageFor(model => model.CartItems[i].Count)
            </p>
                }
            </div>
            <div id="update-message" style="padding-bottom: 10px;">
            </div>
            <table>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Unit Price (£)
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th></th>
                </tr>

                @{int ix = 0;}
                @foreach (var item in Model.CartItems)
                {
                    <tr id="row-@item.RecordId">
                        <td>
                            @Html.ActionLink(item.Product.Name, "Details", "Store", new { id = item.ProductId }, null)
                        </td>
                        <td align="right">
                            @item.Product.Price
                        </td>
                        <td align="right" style="padding:0px 5px 0px 5px;">
                            @Html.TextBoxFor(model => model.CartItems[ix].Count,
                         new
                         {
                             style = "width:30px; text-align:right;",
                             onkeyup = "clearUpdateMessage();",
                             onchange = "clearUpdateMessage();"
                         })
                        </td>
                        <td>
                            <a href="#" class="RefreshQuantity" data-id="@item.RecordId" txt-id="CartItems_@(ix)__Count">Refresh quantity</a>&nbsp;|&nbsp;
                            <a href="#" class="RemoveLink" data-id="@item.RecordId">Remove from cart</a>&nbsp;
                        </td>
                    </tr>
                    ix++;
                }
                <tr>
                    <td>
                        Total (£)
                    </td>
                    <td></td>
                    <td></td>
                    <td id="cart-total">
                        @Model.CartTotal
                    </td>
                </tr>
            </table>
        </div>

                    }